<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.proclassmates.imoocmeet">

    <application
        android:usesCleartextTraffic="true"
        android:name=".base.BaseApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".ui.GuideActivity"
            android:theme="@style/AppFullTheme" />
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/AppFullTheme" />
        <activity
            android:name=".ui.IndexActivity"
            android:theme="@style/AppFullTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".ui.TestLoginActivity" />

        <provider
            android:name="cn.bmob.v3.util.BmobContentProvider"
            android:authorities="com.proclassmates.imoocmeet.BmobContentProvider" />
    </application>

</manifest>